generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum RecipeDifficulty {
  EASY
  MEDIUM
  HARD
  EXPERT
}

enum RecipeStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model User {
  id                  String               @id @default(uuid())
  name                String
  email               String               @unique
  password            String
  phoneNo             String?
  profileUrl          String?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime?
  recipes             Recipe[]
  favourites          Favourite[]
  refreshTokens       RefreshToken[]
  reviews             Review[]
  emailChangeRequests EmailChangeRequest[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    String
  device    String?
  ipAddress String?
  exipresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, device])
}

model EmailChangeRequest {
  id        Int      @id @default(autoincrement())
  userId    String
  token     String   @unique
  newEmail  String
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id])
}

model Recipe {
  id          Int              @id @default(autoincrement())
  title       String
  description String
  imageUrl    String?
  cookingTime Int
  serving     Int
  difficulty  RecipeDifficulty
  status      RecipeStatus
  rating      Decimal?         @db.Decimal(5, 2)
  createdAt   DateTime         @default(now())
  updatedAt   DateTime?

  userId      String
  user        User               @relation(fields: [userId], references: [id])
  ingredients RecipeIngredient[]
  steps       RecipeStep[]
  categories  RecipeCategories[]
  tags        RecipeTag[]
  reviews     Review[]
  favourites  Favourite[]
}

model RecipeIngredient {
  id       Int    @id @default(autoincrement())
  name     String
  recipeId Int
  quantity String
  unit     String
  recipe   Recipe @relation(fields: [recipeId], references: [id])

  @@unique([name, recipeId])
}

model RecipeStep {
  id          Int     @id @default(autoincrement())
  stepNumber  Int
  title       String?
  instruction String
  imageUrl    String?
  recipe      Recipe  @relation(fields: [recipeId], references: [id])
  recipeId    Int
}

model Category {
  id      Int                @id @default(autoincrement())
  name    String             @unique
  slug    String
  recipes RecipeCategories[]
}

model RecipeCategories {
  recipe     Recipe   @relation(fields: [recipeId], references: [id])
  recipeId   Int
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  @@id([recipeId, categoryId])
}

model Tag {
  id      Int         @id @default(autoincrement())
  name    String
  slug    String
  recipes RecipeTag[]
}

model RecipeTag {
  recipe   Recipe @relation(fields: [recipeId], references: [id])
  recipeId Int
  tag      Tag    @relation(fields: [tagId], references: [id])
  tagId    Int

  @@id([recipeId, tagId])
}

model Review {
  id          Int     @id @default(autoincrement())
  rating      Int?
  description String
  recipeId    Int
  userId      String
  parentId    Int?
  deleted     Boolean @default(false)

  recipe Recipe? @relation(fields: [recipeId], references: [id])
  user   User?   @relation(fields: [userId], references: [id])

  parent  Review?  @relation("ReviewReplies", fields: [parentId], references: [id])
  replies Review[] @relation("ReviewReplies")

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Favourite {
  userId    String
  recipeId  Int
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  recipe Recipe @relation(fields: [recipeId], references: [id])

  @@id([userId, recipeId])
}
